<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="overlapAnchor">false</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">@dimen/_3sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.TitleTextAppearance">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/app_text_color_light</item>
        <!--        <item name="fontPath">@string/font_regular</item>-->
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.TextView" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_regular</item>
        <item name="android:textColor">@color/app_text_color</item>
        <!--        <item name="fontPath">@string/font_regular</item>-->
        <item name="android:gravity">left|start</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextView.NavMenu">
        <item name="android:drawableTint">@color/app_default_text_color</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

    <style name="AppTheme.TextView.Bold" parent="AppTheme.TextView">
        <!--        <item name="fontPath">@string/font_bold</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.NotFound" parent="AppTheme.TextView.Bold">
        <item name="android:textColor">@color/app_hint_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_bg_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/app_text_large</item>
        <item name="android:textStyle">italic</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_max</item>
        <item name="android:textColor">@color/app_text_color_light</item>
        <!--        <item name="fontPath">@string/font_regular</item>-->
        <item name="android:background">@color/app_bg_color</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:paddingTop">@dimen/app_padding</item>
        <item name="android:paddingBottom">@dimen/app_padding</item>

    </style>

    <style name="AppTheme.Button.Login" parent="AppTheme.Button">
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="AppTheme.CustomDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="fontPath">@string/font_regular</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/app_text_regular</item>
    </style>

    <style name="AppTheme.ButtonOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_text_regular</item>
        <item name="android:layout_marginTop">@dimen/app_margin</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:layout_marginLeft">@dimen/app_margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/app_margin</item>
        <item name="android:layout_marginRight">@dimen/app_margin</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/app_margin</item>

        <!--<item name="android:paddingTop">@dimen/app_padding</item>
          <item name="android:paddingBottom">@dimen/app_padding</item>
          <item name="android:paddingLeft">@dimen/app_padding</item>
          <item name="android:paddingRight">@dimen/app_padding</item>
          <item name="android:paddingStart">@dimen/app_padding</item>
          <item name="android:paddingEnd">@dimen/app_padding</item>-->
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/divider_bg_color</item>
    </style>


    <style name="AppTheme.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--        <item name="fontPath">@string/font_regular</item>-->
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>

        <item name="android:layout_marginTop">@dimen/app_margin</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:layout_marginLeft">@dimen/app_margin</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/app_margin</item>
        <item name="android:layout_marginRight">@dimen/app_margin</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/app_margin</item>

    </style>

    <style name="AppTheme.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textCapSentences</item>
    </style>



</resources>
