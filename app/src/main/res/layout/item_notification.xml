<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">


            <TextView
                style="@style/AppTheme.TextView.Bold"
                android:layout_margin="@dimen/_4sdp"
                android:textColor="@color/app_color"
                android:textSize="@dimen/app_text_max"
                android:textStyle="bold"
                tools:text="Push message title" />

            <TextView
                style="@style/AppTheme.TextView.Bold"
                android:layout_margin="@dimen/_4sdp"
                android:textColor="@color/app_default_text_color"
                android:textSize="@dimen/app_text_regular"
                tools:text="08.28 (수) 오전 11시 39분" />

            <TextView
                style="@style/AppTheme.TextView"
                android:layout_margin="@dimen/_4sdp"
                android:maxLines="3"
                tools:text="Push message contents" />


        </LinearLayout>

        <View
            style="@style/AppTheme.Divider"
            android:layout_marginTop="@dimen/_8sdp" />
    </LinearLayout>

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="notification"
            type="com.etech.testproject.data.model.Lecture" />
    </data>


</layout>